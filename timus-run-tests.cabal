--license-file:        LICENSE
author:              Erik Ranapaa
maintainer:          erantapaa@gmail.com
-- copyright:           
-- category:            
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

executable run-tests
  main-is:             RunTests.hs
  other-modules:       RunProcess
  -- other-modules:       
  -- other-extensions: 
  build-depends:       base >=4.7 && <4.8
                       , bytestring
                       , boxes
                       , directory
                       , either
                       , filepath
                       , optparse-applicative
                       , process
                       , temporary
                       , time
                       , transformers
  hs-source-dirs:      src
  default-language:    Haskell2010

